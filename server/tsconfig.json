{
    "compilerOptions": {
        "importHelpers": true,
        "allowJs": true,
        "checkJs": true,

        "lib": ["es2020"],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
      },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
